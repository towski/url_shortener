<h3>Submit your url for shortening</h3>
<% if flash[:notice] %>
   <div class="notice" style='color:red'><%= flash[:notice] %></div>
<% end %>
<% @tiny_url.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>
<%= form_for @tiny_url do |form| %>
  <%= form.text_field :url, :value => "http://" %>
  <%= form.submit %>
<% end %>
